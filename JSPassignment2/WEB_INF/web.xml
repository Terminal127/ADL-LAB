<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <display-name>JSP Assignment</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>IPFilter</filter-name>
        <filter-class>com.filters.IPFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IPFilter</filter-name>
        <url-pattern>/filterIP.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MultiFilter</filter-name>
        <filter-class>com.filters.MultiFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MultiFilter</filter-name>
        <url-pattern>/multiFilter.jsp</url-pattern>
    </filter-mapping>
</web-app>
